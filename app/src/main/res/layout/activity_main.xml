<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/jarak20dp"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jarak20dp">

        <TextView
            android:id="@+id/second_qiroati_text"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/jarak20dp"
            android:background="@drawable/ground_button_place"
            android:gravity="center"
            android:text="@string/qiroati_2_text"
            android:textColor="@android:color/white"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/first_qiroati_text"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/jarak20dp"
            android:background="@drawable/ground_button_place"
            android:gravity="center"
            android:text="@string/qiroati_1_text"
            android:textColor="@android:color/white"
            android:textSize="70sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jarak20dp"
        android:layout_marginTop="@dimen/jarak20dp">

        <TextView
            android:id="@+id/fourth_qiroati_text"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/jarak20dp"
            android:background="@drawable/ground_button_place"
            android:gravity="center"
            android:text="@string/qiroati_4_text"
            android:textColor="@android:color/white"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/third_qiroati_text"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/jarak20dp"
            android:background="@drawable/ground_button_place"
            android:gravity="center"
            android:text="@string/qiroati_3_text"
            android:textColor="@android:color/white"
            android:textSize="70sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jarak20dp"
        android:layout_marginTop="@dimen/jarak20dp">

        <TextView
            android:id="@+id/tajwid_text"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/jarak20dp"
            android:background="@drawable/ground_button_place"
            android:gravity="center"
            android:text="@string/tajwid_text"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/tajwid_gharib_text"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/jarak20dp"
            android:background="@drawable/ground_button_place"
            android:gravity="center"
            android:text="@string/gharib_text"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
    </RelativeLayout>
</LinearLayout>