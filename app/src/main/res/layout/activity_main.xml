<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/jarak20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jarak20dp">

        <ImageView
            android:id="@+id/firstjilidicon"
            android:layout_width="@dimen/jarak100dp"
            android:layout_height="@dimen/jarak100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/jarak20dp"
            android:src="@drawable/jilidsatuicon"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/secondjilidicon"
            android:layout_width="@dimen/jarak100dp"
            android:layout_height="@dimen/jarak100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/jarak20dp"
            android:src="@drawable/jilidduaicon"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/jarak20dp"
        android:layout_marginBottom="@dimen/jarak20dp">

        <ImageView
            android:id="@+id/thirdjilidicon"
            android:layout_width="@dimen/jarak100dp"
            android:layout_height="@dimen/jarak100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/jarak20dp"
            android:src="@drawable/jilidtigaicon"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/fourthjilidicon"
            android:layout_width="@dimen/jarak100dp"
            android:layout_height="@dimen/jarak100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/jarak20dp"
            android:src="@drawable/jilidempaticon"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/jarak20dp"
        android:layout_marginBottom="@dimen/jarak20dp">


        <ImageView
            android:id="@+id/tajwidicon"
            android:layout_width="@dimen/jarak100dp"
            android:layout_height="@dimen/jarak100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/jarak20dp"
            android:src="@drawable/tajwidicon"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ghoribicon"
            android:layout_width="@dimen/jarak100dp"
            android:layout_height="@dimen/jarak100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/jarak20dp"
            android:src="@drawable/ghoribicon"
            tools:ignore="ContentDescription" />

    </RelativeLayout>
</LinearLayout>